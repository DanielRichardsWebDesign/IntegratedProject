
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Health Monitoring Application - Patient Dashboard</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
        <a class="navbar-brand text-white" href="@Url.Action("PatientHome", "Home")">Health Monitor</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="@Url.Action("PatientHome", "Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Responses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("ToPatientMessage", "MessagePage")">Messages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("SurveyPreview", "PatientSurvey")">Surveys</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("PatientDetails", "EditDetails")">My Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Alerts</a>
                </li>
            </ul>
            <ul class="ml-auto">
                <a class="btn btn-danger text-white" href="@Url.Action("LogOut", "Login")">Logout</a>
            </ul>
        </div>
    </nav>
    <br>
    <div class="jumbotron jumbotron-fluid bg-primary text-white text-center">
        <div class="container">
            <h1 class="display-4">Welcome {...} </h1>
            <p class="lead">Access to your health monitoring system.</p>
        </div>
    </div>
    <br>


    First Name: <input type="text"/>
    Last Name:<input type="text" />
    Email: <input type="text" />
</body>
</html>